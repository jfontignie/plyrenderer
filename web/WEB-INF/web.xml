<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <servlet>
        <servlet-name>plyrendererService</servlet-name>
        <servlet-class>org.plyrenderer.server.PlyRendererServiceImpl</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>plyrendererService</servlet-name>
        <url-pattern>/plyrenderer/PlyRendererService</url-pattern>
    </servlet-mapping>


    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>plyrenderer.html</welcome-file>
    </welcome-file-list>

</web-app>
